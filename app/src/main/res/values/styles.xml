<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- base custom theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/normal_divider_bg</item>
    </style>
    <!-- base NoActionBar theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/normal_divider_bg</item>
    </style>
    <!-- base Fullscreen theme. -->
    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/normal_divider_bg</item>
    </style>

    <style name="common_scroll_bar_style">
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarSize">3dip</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/common_scroll_bar</item>
    </style>

</resources>
